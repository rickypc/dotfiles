if [[ -z $1 || -z $2 ]]; then
    echo "Usage: $0 <pretty.json> <uglified.json>"
else
    cat $1 | python -c "with open('$2','w') as file: import json,sys;json.dump(json.load(sys.stdin),file,separators=(',',':'))"
fi
