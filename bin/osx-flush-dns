sudo -- sh -c 'dscacheutil -flushcache; killall -HUP mDNSResponder'
scutil --dns

# Compare DNS config:
# $ dns-sd -G v4 images.apple.com
# $ nslookup images.apple.com

# View DNS queries on en0:
# $ sudo tcpdump -n -i en0 port 53
