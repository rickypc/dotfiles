# see hidden files    
shopt -s dotglob

# clear logs
sudo rm -f /var/log/*.gz /var/log/*.old /var/log/*/*.gz

:>~/.lesshst
[ -f ~/.mysql_history ] && :>~/.mysql_history

# clear vim history
find ~/.vim/backup -mindepth 1 ! -name '.gitignore' -exec rm -rf -- {} +
[ -d ~/.vim6 ] && find ~/.vim6/backup -mindepth 1 ! -name '.gitignore' -exec rm -rf -- {} +
:>~/.viminfo

# clear bash history
:>~/.bash_history
history -c
