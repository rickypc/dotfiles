# see hidden files    
shopt -s dotglob

# clear logs
sudo rm -f /var/log/*.gz /var/log/*.old /var/log/*/*.gz

:>~/.lesshst
[ -f ~/.mysql_history ] && :>~/.mysql_history

# clear vim history
rm -rf ~/.vim/backup/*
#rm -rf ~/.vim/backup/.??*
[ -d ~/.vim6 ] && rm -rf ~/.vim6/backup/*
#[ -d ~/.vim6 ] && rm -rf ~/.vim6/backup/.??*
:>~/.viminfo

# clear bash history
:>~/.bash_history
history -c
