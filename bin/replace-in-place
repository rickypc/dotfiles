if [[ -z $1 || -z $2 || -z $3 ]]; then
    echo "Usage: $0 <old_pattern> <new_pattern> <file_path>"
else
    /usr/bin/env perl -p -i.bak -e "s/$1/$2/g" $3
    echo "'$1' replaced with '$2' in '$3'"
fi
