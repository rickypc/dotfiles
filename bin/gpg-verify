PROGRAM_NAME=$(basename $0)

usage () {
    echo "Usage: $@"
    exit 127
}

if test $# -lt 1; then
    usage "$PROGRAM_NAME <document> [document.asc|document.sig]"
fi

ASC_PATH=$1.asc
DOC_PATH=$1

if test $# -eq 2; then
    ASC_PATH=$2
else
    echo "$PROGRAM_NAME: assuming signature data in \`$ASC_PATH\`"
fi

gpg --verify "$ASC_PATH" "$DOC_PATH"
