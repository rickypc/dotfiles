# Source function library.
. ~/bin/functions

WORKON_HOME="${WORKON_HOME:-$HOME/.venv}"

if [ ! -d $WORKON_HOME/default ]; then
  [ -n "$VIRTUAL_ENV" ] && deactivate
  rm -rf $(readlink -f $WORKON_HOME/default) $WORKON_HOME/default
  # Set VIRTUAL_ENV_PROMPT to PYTHON_LTS.
  $LOCAL_BIN/python3 -m venv $WORKON_HOME/$PYTHON_LTS
  ln -sf $WORKON_HOME/$PYTHON_LTS $WORKON_HOME/default
fi
