function usage {
    echo -e "Usage: $0 [-e <exclude folder> ...] -h\n"
    echo "Command line switches are optional. The following switches are recognized."
    echo "   -e  -- Folder to be excluded from the removal path."
    echo "   -h  -- Show this usage."
    exit 1
}

while getopts ":e:h" o; do
    case "$o" in
        e) EXCLUDES+=("$OPTARG");;
        h) usage;;
    esac
done

shift $((OPTIND-1))

FIND_ARGS+="-not \( -path '*.git/*' -prune \) -not \( -path '*node_modules*' -prune \)"

if [ ! -z "$EXCLUDES" ]; then
    for EXCLUDE in "${EXCLUDES[@]}"; do
        FIND_ARGS+=" -not \( -path '*$EXCLUDE*' -prune \)"
    done
fi

eval "find . -type f $FIND_ARGS -print0 | xargs -0 dos2unix -q"
